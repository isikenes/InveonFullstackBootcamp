@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Users";
}

@model IEnumerable<IdentityUser>

<h1>Users</h1>

<div>
    <a asp-area="Admin" asp-controller="Users" asp-action="Create" class="btn btn-success mb-3">Create User</a>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td class="text-center">
                        <a asp-area="Admin" asp-controller="Users" asp-action="Update" asp-route-id="@user.Id" class="btn btn-primary">Update</a>
                        <form asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        <a asp-area="Admin" asp-controller="Users" asp-action="EditRoles" asp-route-id="@user.Id" class="btn btn-secondary">Edit Roles</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>